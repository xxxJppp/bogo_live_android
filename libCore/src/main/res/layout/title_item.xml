<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minWidth="@dimen/res_width_title_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/title_item_iv_left"
        android:layout_width="@dimen/res_width_title_item_image"
        android:layout_height="@dimen/res_height_title_item_image"/>

    <LinearLayout
        android:id="@+id/title_item_ll_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_item_tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="top"
            android:textColor="@color/res_text_title_bar"
            android:textSize="@dimen/res_text_title_bar"/>

        <TextView
            android:id="@+id/title_item_tv_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="bottom"
            android:textColor="@color/res_text_title_bar"
            android:textSize="@dimen/res_text_sub_title_bar"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/title_item_iv_right"
        android:layout_width="@dimen/res_width_title_item_image"
        android:layout_height="@dimen/res_height_title_item_image"/>

</LinearLayout>