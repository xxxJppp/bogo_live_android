<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="#CC110B25" />

    <com.bogokj.live.view.InterceptTouchEventLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.bogokj.library.view.CircleImageView
            android:id="@+id/civ_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="55dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="直播已结束"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/self_side_white_tra_five_bottom_cornor_bac"
            android:orientation="horizontal"
            android:paddingTop="35dp"
            android:paddingBottom="35dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/live_phsher_money_top_iv" />

                <TextView
                    style="@style/res.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收益"
                    android:textColor="#E0E0E0"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/tv_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#DE88FF"
                    android:textSize="13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/live_phsher_looks_top_iv" />

                <TextView
                    style="@style/res.Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:text="观看人数"
                    android:textColor="#E0E0E0"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/tv_viewer_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#F5F5F5"
                    android:textSize="13sp" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/live_phsher_bac"
            android:gravity="center"
            android:text="截屏分享"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_back_home"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@mipmap/live_phsher_other_bac"
            android:gravity="center"
            android:text="返回首页"
            android:textColor="@color/global" />


        <ImageView
            android:id="@+id/tv_delete_video"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_end_live_delete_video"
            android:visibility="invisible" />

    </com.bogokj.live.view.InterceptTouchEventLinearLayout>

</RelativeLayout>