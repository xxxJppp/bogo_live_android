<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_top_pic_head_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/item_top_pic_arrow_iv"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/item_top_pic_head_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_top_pic_head_iv"
        app:layout_constraintVertical_bias="0.555" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/item_top_pic_head_iv"
        app:layout_constraintStart_toEndOf="@+id/item_top_pic_head_iv"
        app:layout_constraintTop_toTopOf="@+id/item_top_pic_head_iv">

        <TextView
            android:id="@+id/item_top_pic_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_three_text_color"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="15dp" />

        <TextView
            android:id="@+id/item_top_pic_hot_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black_six_text_color"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="36dp" />

    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#f2f2f2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_top_pic_head_iv" />
</android.support.constraint.ConstraintLayout>