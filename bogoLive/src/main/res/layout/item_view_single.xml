<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ll_gift_icon_wish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@drawable/self_oval_white_color">

            <ImageView
                android:id="@+id/top_wish_gift_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_launcher" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ll_gift_icon_wish"
            android:orientation="vertical">

            <TextView
                android:id="@+id/top_wish_gift_name_tv"
                style="@style/res.Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="七彩火箭"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.bogokj.live.view.ZzHorizontalProgressBar
                    android:id="@+id/top_wish_gift_progress_pb"
                    android:layout_width="73dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="5dp"
                    app:zpb_bg_color="#D8D8D8"
                    app:zpb_gradient_from="#9D64FF"
                    app:zpb_gradient_to="#F060F6"
                    app:zpb_max="100"
                    app:zpb_open_gradient="true"
                    app:zpb_padding="1px"
                    app:zpb_progress="80"
                    app:zpb_second_pb_color="#f5a623"
                    app:zpb_show_second_point_shape="point"
                    app:zpb_show_second_progress="true" />

                <TextView
                    android:id="@+id/top_wish_gift_progress_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="300/9999"
                    android:textColor="#ffffffff"
                    android:textSize="9sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>