<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.opensource.svgaplayer.SVGAImageView
        android:id="@+id/svga_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlay="true"
        app:source="posche.svga" />


    <LinearLayout
        android:id="@+id/ll_car_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:gravity="left|center_vertical"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/car_enter_text_bg"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                >


                <com.bogokj.library.view.CircleImageView
                    android:id="@+id/iv_pic"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="1dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bg_head_image_loading"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/res_second_color"
                        android:textSize="12sp"
                        android:text="张三 "
                        />
                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:text="张三 "
                        />

                </LinearLayout>


            </LinearLayout>


        </FrameLayout>


    </LinearLayout>

</RelativeLayout>