<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bogokj.live.activity.BogoSignInActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_global_full_radius_gradual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_sign_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="32dp"
            android:text="已连续签到"
            android:textColor="#fffbf0ff"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sign_in_time_first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@mipmap/sign_in_day_num_bac"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:text="0"
            android:textColor="#ffcd49ff"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/sign_in_time_third_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:background="@mipmap/sign_in_day_num_bac"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:text="0"
            android:textColor="#ffcd49ff"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/sign_in_time_second_tv"
            app:layout_constraintStart_toEndOf="@+id/sign_in_time_second_tv"
            app:layout_constraintTop_toTopOf="@+id/sign_in_time_second_tv" />

        <TextView
            android:id="@+id/sign_in_time_second_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:background="@mipmap/sign_in_day_num_bac"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:text="0"
            android:textColor="#ffcd49ff"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/sign_in_time_first_tv"
            app:layout_constraintStart_toEndOf="@+id/sign_in_time_first_tv"
            app:layout_constraintTop_toTopOf="@+id/sign_in_time_first_tv" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sign_in_gift_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/sign_in_finish_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="114dp"
        android:height="40dp"
        android:background="@drawable/bg_global_full_radius_gradual"
        android:gravity="center"
        android:text="立即签到"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
