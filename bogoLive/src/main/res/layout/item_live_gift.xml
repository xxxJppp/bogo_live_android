<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/base_textsize_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="9dp"
                android:src="@drawable/ic_diamond" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:lines="1"
                android:textColor="@color/tv_diamond"
                android:textSize="@dimen/base_textsize_10" />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tv_is_much"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/res_layer_transparent_stroke_m_blue_oval"
        android:gravity="center"
        android:text="è¿ž"
        android:textColor="@color/tv_diamond"
        android:textSize="9sp"
        android:visibility="gone" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/tv_is_luck"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:background="@drawable/ic_bg_gift_luck" />


    <TextView
        android:id="@+id/tv_gift_type"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="top|left"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layer_transparent_gift_type_bg"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/red"
        android:textSize="9sp"
        android:visibility="visible" />

</FrameLayout>